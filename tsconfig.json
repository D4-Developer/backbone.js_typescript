{
    "compilerOptions": {                      
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      // "sourceMap": true,
      "lib": ["es2015", "dom"],
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "./built"
    },
    "esModuleInterop": true,

    "include": [
      "./src"
    ],
    
    "exclude": [
      "node_modules",
      "data",
      "lib",
      "./built/**/*"
    ],
  }